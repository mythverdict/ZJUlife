<?xml version="1.0" encoding="utf-8"?>

<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#1E1E1E"
    android:orientation="vertical"
    tools:context="com.zju.isee.zjulife.MainActivity" >

    <RelativeLayout
        android:id="@+id/rtLayout1"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:background="#85B935"
        >
        <ImageButton 
            android:id="@+id/backToMain"
            android:layout_width="30dp"
            android:layout_height="35dp"
            android:background="@drawable/returnback"
            android:layout_centerVertical="true"
            android:layout_marginLeft="2dp"
            android:clickable="true"
            android:onClick="BackToMain"
            />
        <TextView 
        android:id="@+id/appNameTrans1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		android:text="教室占用情况"
		android:textColor="#ECF0F1"     
		android:textSize="32sp"  
		android:layout_centerVertical="true"
		android:layout_toRightOf="@id/backToMain"
        />
        
    </RelativeLayout>
    <FrameLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
		<WebView  
    		android:id="@+id/classroomWebview"
    		android:layout_width="match_parent"
    		android:layout_height="match_parent"
			/>
		<ImageView 
		    android:id="@+id/refresh"
		    android:layout_width="30dp"
		    android:layout_height="30dp"
		    android:src="@drawable/refresh"
		    android:layout_gravity="right"
		    android:layout_marginTop="10dp"
		    android:layout_marginRight="10dp"
		    android:clickable="true"
		    />
</FrameLayout>
</LinearLayout>
