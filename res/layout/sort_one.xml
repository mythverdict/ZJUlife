<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
	<RelativeLayout
	    android:id="@+id/oneRtLayout1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	    >
	 <TextView
		android:id="@+id/sort1"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="@string/appSort1"
		android:textSize="21sp"
		android:textColor="#F27B04"
		android:layout_centerVertical="true"
		android:layout_alignParentRight="true"
		android:layout_marginRight="13dp"
		/>
	</RelativeLayout>
	        
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<RelativeLayout
			android:id="@+id/oneRtLayout2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
			>
			<ImageView
				android:id="@+id/tuBiao1"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
    	        android:src="@drawable/icon1" 
    	        android:layout_centerHorizontal="true"
    	        android:layout_marginTop="25dp"
    	        android:clickable="true"
    	        android:onClick="start_1"
				/>
    	    <TextView 
    	        android:id="@+id/zhongLei1"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="防坑须知"
				android:textSize="16sp"
				android:textColor="#F27B04"
				android:layout_below="@id/tuBiao1"
				android:paddingTop="15dp"
				android:layout_centerHorizontal="true"
    	        />
    	    <ImageView
    	        android:id="@+id/tuBiao3"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
    	        android:contentDescription="@string/app_name"
    	        android:src="@drawable/icon3" 
    	        android:layout_centerHorizontal="true"
    	        android:layout_below="@id/zhongLei1"
    	        android:layout_marginTop="25dp"
    	        android:clickable="true"
    	        android:onClick="start_3"
    	        />
    	    <TextView 
    	        android:id="@+id/zhongLei3"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="网络办理"
				android:textSize="16sp"
				android:textColor="#F27B04"
				android:layout_below="@id/tuBiao3"
				android:paddingTop="15dp"
				android:layout_centerHorizontal="true"
    	        />
		</RelativeLayout>
		<RelativeLayout
	        android:id="@+id/oneRtLayout3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        >    	   
    	 	<ImageView
    	        android:id="@+id/tuBiao2"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
    	        android:contentDescription="@string/app_name"
    	        android:src="@drawable/icon2" 
    	        android:layout_centerHorizontal="true"
    	        android:layout_marginTop="25dp"
    	        android:clickable="true"
    	        android:onClick="start_2"
    	        />
    	  	<TextView 
    	        android:id="@+id/zhongLei2"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="内网导航"
				android:textSize="16sp"
				android:textColor="#F27B04"
				android:layout_below="@id/tuBiao2"
				android:paddingTop="15dp"
				android:layout_centerHorizontal="true"
    	        />
		</RelativeLayout>
	</LinearLayout>

</LinearLayout>