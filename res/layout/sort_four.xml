<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context="com.zju.isee.zjulife.CircleViewFlow" >

	<RelativeLayout
		android:id="@+id/fouRtLayout1"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
	>
		<TextView
			android:id="@+id/sort4"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/appSort4"
			android:textSize="21sp"
			android:textColor="#F27B04"
			android:layout_centerVertical="true"
			android:layout_alignParentRight="true"
			android:layout_marginRight="13dp"
			/>
	</RelativeLayout>
	<LinearLayout 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal"
		>
		<RelativeLayout
			android:id="@+id/fouRtLayout2"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        >
    	    <ImageView
    	        android:id="@+id/tuBiao11"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
    	        android:contentDescription="@string/app_name"
    	        android:src="@drawable/icon11" 
    	        android:layout_centerHorizontal="true"
    	        android:layout_marginTop="25dp"
    	        android:clickable="true"
    	        android:onClick="start_11"
    	        />
    	    <TextView 
    	        android:id="@+id/zhongLei11"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="就医事项"
				android:textSize="16sp"
				android:textColor="#F27B04"
				android:layout_below="@id/tuBiao11"
				android:paddingTop="15dp"
				android:layout_centerHorizontal="true"
    	        />
    	    <ImageView
    	        android:id="@+id/tuBiao13"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
    	        android:contentDescription="@string/app_name"
    	        android:src="@drawable/icon13" 
    	        android:layout_centerHorizontal="true"
    	        android:layout_below="@id/zhongLei11"
    	        android:layout_marginTop="25dp"
    	        android:clickable="true"
    	        android:onClick="start_13"
    	        />
    	    <TextView 
    	        android:id="@+id/zhongLei13"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="临时住宿"
				android:textSize="16sp"
				android:textColor="#F27B04"
				android:layout_below="@id/tuBiao13"
				android:paddingTop="15dp"
				android:layout_centerHorizontal="true"
    	        />
		</RelativeLayout>
		<RelativeLayout
			android:id="@+id/fouRtLayout3"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_weight="1"
	        >    	   
			<ImageView
    	        android:id="@+id/tuBiao12"
    	        android:layout_width="128dp"
    	        android:layout_height="128dp"
    	        android:contentDescription="@string/app_name"
    	        android:src="@drawable/icon12" 
    	        android:layout_centerHorizontal="true"
    	        android:layout_marginTop="25dp"
    	        android:clickable="true"
    	        android:onClick="start_12"/>
			<TextView 
    	        android:id="@+id/zhongLei12"
    	        android:layout_width="wrap_content"
    	        android:layout_height="wrap_content"
    	        android:text="吃货交流"
				android:textSize="16sp"
				android:textColor="#F27B04"
				android:layout_below="@id/tuBiao12"
				android:paddingTop="15dp"
				android:layout_centerHorizontal="true"
    	        />
		</RelativeLayout>
	</LinearLayout>
</LinearLayout>